<Window x:Class="Chess.Gui.PromoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.Gui"
        mc:Ignorable="d"
        Title="Promote" Height="103.977" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Click="QueenClickEventHandler">
            <Image Source="pack://application:,,,/Images/WhiteQueen.png"/>
        </Button>
        <Button Grid.Row="0" Grid.Column="1" Click="RookClickEventHandler">
            <Image Source="pack://application:,,,/Images/WhiteRook.png"/>
        </Button>
        <Button Grid.Row="0" Grid.Column="2" Click="BishopClickEventHandler">
            <Image Source="pack://application:,,,/Images/WhiteBishop.png"/>
        </Button>
        <Button Grid.Row="0" Grid.Column="3" Click="KnightClickEventHandler">
            <Image Source="pack://application:,,,/Images/WhiteKnight.png"/>
        </Button>
    </Grid>
</Window>
